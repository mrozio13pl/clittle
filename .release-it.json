{
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                      "type": "feat",
                      "section": "🌟 Features"
                    },
                    {
                      "type": "fix",
                      "section": "🐞 Bug Fixes"
                    },
                    {}
                ]
            }
        }
    }
}